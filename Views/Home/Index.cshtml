@{
    ViewData["Title"] = "Home Page";
}

    <div class="jumbotron">
        <h1>Welcome to UWT Library !</h1>
        <p>Please use the search bar below to find a textbook.</p>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search a textbook">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
        
    </div>
<div class="row">
    <div class="col-md-5">
        <h2>Login as Student</h2>
        <ul>
            <li>Manage all rented books</li>
            <li>Reserve textbooks</li>
            <li>Extend textbook rental</li>
        </ul>
        
    </div>
    <div class="col-md-5">
        <h2>Login as Librarian</h2>
        <ul>
            <li>Create, Edit, Delete Textbooks</li>
            <li>Manage all rented books as an admin</li>
            <li>Manage overdue books</li>
        </ul>
        
    </div>

</div>