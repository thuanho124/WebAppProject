@model LibraryManagementSys.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Edition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Edition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicDate)
        </dd>
    </dl>
</div>

<h4>Rented By:</h4>
@foreach (var item in Model.RentedBooks)
{
<dl class="row">
    <dt class="col-sm-2">
        First Name:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.Student.StudentFirstName)
    </dd>
    <dt class="col-sm-2">
        Last Name:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.Student.StudentLastName)
    </dd>
    <dt class="col-sm-2">
        Email:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.Student.StudentEmail)
    </dd>
    <dt class="col-sm-2">
        Issue Date:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.RentDate)
    </dd>
    <dt class="col-sm-2">
        Return Date: 
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(modelItem => item.ReturnDate)
    </dd>
</dl>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>